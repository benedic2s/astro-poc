---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<style>
  h1 {
    position: absolute;
    font-size: 200px;
    font-family: Arial, Helvetica, sans-serif;
  }

  .textContainer {
    display: flex;
  }
  .text1 {
    color: #5ae35a;
    top: 10px;
    left: 500px;
  }

  .text2 {
    color: #5ae35a;
    top: 200px;
    left: 300px;
  }

  .text3 {
    color: #5ae35a;
    top: 400px;
    left: 100px;
  }

  img {
    opacity: 0.3;
    width: 100%;
    height: 100%;
    position: relative;
  }
</style>

<BaseLayout>
  <div style="position: absolute;">
    <div class="textContainer">
      <h1 class="text1">BUN/v1.0.7</h1>
      <h1 class="text2">REACT/v3.0.4</h1>
      <h1 class="text3">ASTRO/v2.10.15</h1>
    </div>
  </div>
	<img src="https://virtual-bg.com/wp-content/uploads/2020/06/rick-and-morty-garage-background.png" alt="">
</BaseLayout>